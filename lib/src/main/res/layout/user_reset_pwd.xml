<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >


    <include 
        
        android:id="@+id/tab_bar"
        layout="@layout/title_bar"/>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/tab_bar" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp" >
             <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="30dp" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@mipmap/logo" />

            </RelativeLayout>
                    <EditText
                        android:id="@+id/et_reg_input_user"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@mipmap/user_name"
                        android:hint="请输入您的手机号"
                        android:numeric="integer"
                        android:singleLine="true"
                        android:text=""
                        android:textSize="14sp" >
                        
                    </EditText>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <EditText
                        android:id="@+id/et_reg_input_pwd"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@mipmap/user_pwd"
                        android:hint="请输入密码"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:text=""
                        android:textSize="14sp" />

                    <ToggleButton
                        android:id="@+id/tb_show_hidden"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/toggle_selector"
                        android:checked="false" android:textOn="" android:textOff="" 
                        android:text="" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <EditText
                        android:id="@+id/et_reg_input_yzm"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@mipmap/user_yzm"
                        android:ems="10"
                        android:hint="请输入手机验证码"
                        android:textSize="14sp"
                        android:numeric="integer"
                        android:singleLine="true" >

                        
                    </EditText>

                    <TextView
                        android:id="@+id/tv_send_code"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/btn_radius"
                        android:gravity="center"
                        android:text="发送手机验证码"
                        android:textColor="#ffffff"
                        android:clickable="true"
                        android:onClick="btn_send_sms_code"
                        
                         />

                </RelativeLayout>
                
                
                
                
                
                
                
   <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <Button
                        android:id="@+id/tv_btn_reg"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="15.0dip"
                        android:background="@drawable/btn_radius"
                        android:gravity="center"
                        android:text="重置密码"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:clickable="true"
                        android:onClick="btn_reset_pwd" />

                </RelativeLayout>
            
            
            
            
            
            
            
            
            
            
            
            
            
        </LinearLayout>
    </ScrollView>


</RelativeLayout>