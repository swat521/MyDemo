<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"   android:background="#ffffff"
    android:orientation="vertical" >

     <include 
        
        android:id="@+id/title_bar"
        layout="@layout/title_bar"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/title_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:src="@mipmap/logo"
        android:clickable="true"
        android:onClick="demo" />

    <TextView
        android:id="@+id/about_us_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:text="牛牛"
        android:textSize="28dp"
        android:textColor="@color/app_main_color" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:textColor="@color/text_color"
        android:text="牛牛工作室" />

    <TextView
        android:id="@+id/about_us_content"
        android:layout_width="wrap_content"
        android:layout_height="257dp"
        android:layout_above="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/about_us_title"
        android:layout_marginBottom="9dp"
        android:gravity="center_horizontal"
        android:padding="50dp"
        android:text="就想做个APP"
        android:textColor="@color/text_color"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/about_us_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="14dp"
        android:text="捐赠"
        android:clickable="true"
        android:onClick="juan_zeng"
        android:background="@color/fenge_color"
        android:gravity="center"
        android:textColor="@color/text_color"
         />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-28dp"
        android:text="邮箱：swat521@qq.com"
        android:textColor="@color/text_color"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp"
        android:text="www.511vip.vip"
        android:textColor="@color/text_color"
        android:textSize="10sp" />

</RelativeLayout>
